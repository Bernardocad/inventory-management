<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
</head>
<body>
    <h1>Inventory</h1>
    <table id="inventoryTable">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <!-- Data obtained from the spreadsheet will be displayed here -->
        </tbody>
    </table>

    <script>
        // Service account credentials
        const credentials = {
            client_email: 'inventario-service-account@inventory-management-422312.iam.gserviceaccount.com'
        };

        // Call to Google Sheets API
        function getInventoryData() {
            fetch('https://sheets.googleapis.com/v4/spreadsheets/1h4JU1gMiLAXUwXulcIKLHz145klHfD9c-vNkkjUxL-I/values/Sheet1!A1:C100', {
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + credentials.client_email,
                    'Content-Type': 'application/json'
                },
            })
            .then(response => response.json())
            .then(data => {
                const inventoryTable = document.getElementById('inventoryTable');
                const tbody = inventoryTable.getElementsByTagName('tbody')[0];
                tbody.innerHTML = '';
                data.values.forEach(row => {
                    const tr = document.createElement('tr');
                    row.forEach(cell => {
                        const td = document.createElement('td');
                        td.textContent = cell;
                        tr.appendChild(td);
                    });
                    tbody.appendChild(tr);
                });
            });
        }

        // Call the function to get inventory data when the page loads
        window.onload = getInventoryData;
    </script>
</body>
</html>
