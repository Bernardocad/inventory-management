<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
</head>
<body>
    <h1>Inventory</h1>
    <table id="inventoryTable">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <!-- Data obtained from the spreadsheet will be displayed here -->
        </tbody>
    </table>

    <script>
        // Call to Google Sheets API
        function getInventoryData() {
            fetch('https://docs.google.com/spreadsheets/d/e/2PACX-1vTmWKNmuiIDfj0LGOExrYIeMshE6Yh1U0AXvotUMe-QoA8_1QPmnxCp4ZUD9DIgyjsLPwHCQCYYAj3o/pub?output=csv')
            .then(response => response.text())
            .then(data => {
                const inventoryTable = document.getElementById('inventoryTable');
                const tbody = inventoryTable.getElementsByTagName('tbody')[0];
                tbody.innerHTML = '';
                const rows = data.split('\n');
                rows.forEach(row => {
                    const columns = row.split(',');
                    const product = columns[0];
                    const quantity = columns[1];
                    const price = columns[2];
                    const tr = document.createElement('tr');
                    const tdProduct = document.createElement('td');
                    const tdQuantity = document.createElement('td');
                    const tdPrice = document.createElement('td');
                    tdProduct.textContent = product;
                    tdQuantity.textContent = quantity;
                    tdPrice.textContent = price;
                    tr.appendChild(tdProduct);
                    tr.appendChild(tdQuantity);
                    tr.appendChild(tdPrice);
                    tbody.appendChild(tr);
                });
            });
        }

        // Call the function to get inventory data when the page loads
        window.onload = getInventoryData;
    </script>
</body>
</html>
