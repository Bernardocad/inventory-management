<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
</head>
<body>
    <h1>Inventario</h1>
    <table id="inventoryTable">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            <!-- Aquí se mostrarán los datos obtenidos de la hoja de cálculo -->
        </tbody>
    </table>

    <script>
        // Llamada a la API de Google Sheets
        function getInventoryData() {
            fetch('https://sheets.googleapis.com/v4/spreadsheets/1h4JU1gMiLAXUwXulcIKLHz145klHfD9c-vNkkjUxL-I/values/Sheet1!A1:C100?key=TU_API_KEY')
            .then(response => response.json())
            .then(data => {
                const inventoryTable = document.getElementById('inventoryTable');
                const tbody = inventoryTable.getElementsByTagName('tbody')[0];
                tbody.innerHTML = '';
                data.values.forEach(row => {
                    const tr = document.createElement('tr');
                    row.forEach(cell => {
                        const td = document.createElement('td');
                        td.textContent = cell;
                        tr.appendChild(td);
                    });
                    tbody.appendChild(tr);
                });
            });
        }

        // Llamar a la función para obtener los datos del inventario al cargar la página
        window.onload = getInventoryData;
    </script>
</body>
</html>
